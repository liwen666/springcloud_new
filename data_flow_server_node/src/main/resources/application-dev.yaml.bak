server:
  port: 9001

spring:
  datasource:
    username: root
    password: 123.com
    url: jdbc:mysql://172.16.101.19:3306/data_flow_node?serverTimezone=Hongkong&useUnicode=true&useSSL=false&characterEncoding=utf8
    driver-class-name: com.mysql.cj.jdbc.Driver
    hikari:
      connection-timeout: 60000
      idle-timeout: 30000
      max-lifetime: 60000
      #spring.datasource.hikari.connection-test-query=SELECT 1
      maximum-pool-size: 200
      minimum-idle: 10
      #spring.datasource.hikari.pool-name=HikariSchedulePool
      validation-timeout: 3000
      data-source-properties.cachePrepStmts: true
      data-source-properties.prepStmtCacheSize: 250
      data-source-properties.prepStmtCacheSqlLimit: 2048
      data-source-properties.useServerPrepStmts: true
      data-source-properties.useLocalSessionState: true
      data-source-properties.rewriteBatchedStatements: true
      data-source-properties.cacheResultSetMetadata: true
      data-source-properties.cacheServerConfiguration: true
      data-source-properties.elideSetAutoCommits: true
      data-source-properties.maintainTimeStats: false
  #使用下面的配置LocalDeployerProperties可以省略 见  LocalPlatformProperties
  cloud:
    deployer:
      local:
        workingDirectoriesRoot: /home/jrxany/batch_schedule/workspace
        java-opts: -Xms128M -Xmx128M

    #平台配置
    dataflow:
      task:
        platform:
          local:
            accounts:
              local:
                workingDirectoriesRoot: /home/jrxany/batch_schedule/workspace
                java-opts: -Xms128M -Xmx128M
              test:
                workingDirectoriesRoot: /home/jrxany/batch_schedule/workspace
                java-opts: -Xms128M -Xmx128M
              default:
                workingDirectoriesRoot: /home/jrxany/batch_schedule/workspace
                java-opts: -Xms128M -Xmx128M

  jpa:
    database: Mysql
    show-sql: true
    hibernate:
      ddl-auto: update
      naming:
        implicit-strategy: org.springframework.boot.orm.jpa.hibernate.SpringImplicitNamingStrategy
    properties:
      spring.jpa.properties.hibernate.dialect: org.hibernate.dialect.MySQL55Dialect
  #  LocalDeployerProperties本地执行jar的配置项

  #spring.jpa.hibernate.naming-strategy=cn.studyBoot.dao.strategy.UpperTableStrateg

  #文件上传的配置
  servlet:
    multipart:
      max-file-size: 100MB
      max-request-size: 110MB

  boot:
     admin:
       client:
         url: http://172.16.102.24:8889    #server端地址
         #url: http://127.0.0.1:8889    #server端地址
         username: SBA_admin    #对应server端的账号密码，不配置就监控不到这个client。
         password: SBA_password
         instance:
           service-base-url: http://172.16.102.23:9001   #client地址，
           #不配置的情况下，在打包的时候会有提示。不影响运行。

management:
 server:
   port: 8099
 endpoint:
   health:
     show-details: always
 endpoints:
   web:
     exposure:
       include: '*'
 metrics:
   tags:
     application: ${spring.application.name}
     region: test_boot_admin
---
spring:
  ##thymeleaf 页面跳转
  thymeleaf:
    #    enabled: false
    prefix: classpath:/templates/
    suffix: .html
mybatis:
  mapper-locations: classpath:mapper/*Mapper.xml
  type-aliases-package: jrx.batch.dataflow
mybatis-plus:
  mapper-locations: classpath*:/mapper/*.xml
  type-aliases-package: jrx.batch.dataflow.infrastructure.model
  type-aliases-super-type: java.lang.Object


jrx:
  batch:
    properties:
      JAR_HOME_DEFAULT: /home/jrxany/batch_schedule/jarhome
      NODE_NAME: master_node

